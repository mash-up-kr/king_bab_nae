<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline1_ENG_12dp">
        <item name="android:fontFamily">@font/campton_bold</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Headline1_ENG">
        <item name="android:fontFamily">@font/campton_bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Headline1_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Headline1_Regular">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Headline2_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Headline2_Regular">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Body1_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Body1_Regular">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Body2_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Body2_Regular">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Body3">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Caption_Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="Caption_Regular">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/brown_gray_200</item>
        <!-- Focus 상태 밑줄-->
        <item name="colorControlNormal">@color/brown_gray_200</item>
        <item name="colorControlActivated">@color/main_orange</item>
        <item name="colorControlHighlight">@color/main_orange</item>

        <!-- unFocus 상태 밑줄 -->
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textAppearance">@style/Body1_Regular</item>
        <item name="hintEnabled">false</item>
        <item name="android:textCursorDrawable">@color/main_orange</item>
        <item name="android:textColorHint">@color/brown_gray_200</item>
        <item name="android:textColor">@color/brown_gray_500</item>
    </style>

    <style name="SearchEditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/brown_gray_200</item>
        <item name="colorControlNormal">@color/brown_gray_200</item>
        <item name="colorControlActivated">@color/brown_gray_200</item>
        <item name="colorControlHighlight">@color/brown_gray_200</item>

        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textAppearance">@style/Body1_Regular</item>
        <item name="hintEnabled">false</item>
        <item name="android:textCursorDrawable">@color/main_orange</item>
        <item name="android:textColorHint">@color/brown_gray_200</item>
        <item name="android:textColor">@color/brown_gray_500</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="popupOverflowMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/radius_menu_item</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
    </style>
    
    <style name="KkiLogEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/brown_gray_200</item>
        <item name="colorControlActivated">@color/main_orange</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>
</resources>
